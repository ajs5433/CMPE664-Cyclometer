display::display()
{
	std::cout<<"Display Connected!"<<std::endl;

	currentMode = displayClock;

	while(true)
	{
		if(displayMode == displaySpeed)
			setSpeed();
		else
			setClock();

	}

}

void display::displaySpeedOn(){
	displayMode = displaySpeed;
}

void display::displaySpeedOff(){
	displayMode = displayClock;
}



