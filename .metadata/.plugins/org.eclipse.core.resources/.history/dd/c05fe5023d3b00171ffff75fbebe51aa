#ifndef DISPLAY_H_
#define DISPLAY_H_

/*Defines shared between classes*/
#define LOW 			0x00
#define HIGH 			0xFF
#define BASE_ADDR 		0x280
#define PORTA 			(BASE_ADDR + 8)
#define PORTB 			(BASE_ADDR + 9)
#define DIR_CTRL 		(BASE_ADDR + 11)

/*Specific defines for the Display*/
#define displaySpeed	0
#define displayClock	1
#define Anode0			6
#define Anode1			8
#define Anode2			10
#define Anode3			12

class display
{
	int displayMode;
	int displayTime;	//represents the time in micro-seconds that each display will be on

	//these values hold the integer that will be used by the display thread
	int Display1;
	int Display2;
	int Display3;
	int Display4;

	//Threads
	int updateDisplays;

public:
		display();

		void *updateDisplays_thread(void *object);

		//Internal Methods
		void setSpeed();
		void setClockTime();

		//External Methods
		void displaySpeedOn();
		void displaySpeedOff();

};
#endif /* DISPLAY_H_ */
